{
  "name": "token",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "compile": "npx hardhat compile",
    "build": "npx hardhat build",
    "test": "npx hardhat test",
    "test:coverage": "npx hardhat test ./test/transparent-proxy.ts --coverage",
    "create": "npx hardhat run ./scripts/auction.ts --network sepolia",
    "deploy:local": "concurrently \"npx hardhat node\" \"npx hardhat ignition deploy ignition/modules/main.ts --network localhost\" --kill-others --success first",
    "deploy:sepolia": "npx hardhat ignition deploy ignition/modules/main.ts --network sepolia",
    "redeploy:sepolia": "npx hardhat ignition deploy ignition/modules/main.ts --network sepolia --reset"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^4.0.4",
    "@nomicfoundation/hardhat-ethers-chai-matchers": "^3.0.2",
    "@nomicfoundation/hardhat-ignition": "^3.0.6",
    "@nomicfoundation/hardhat-keystore": "^3.0.3",
    "@nomicfoundation/hardhat-mocha": "^3.0.9",
    "@nomicfoundation/hardhat-network-helpers": "^3.0.3",
    "@nomicfoundation/hardhat-toolbox-mocha-ethers": "^3.0.2",
    "@nomicfoundation/hardhat-typechain": "^3.0.1",
    "@types/chai": "^4.3.20",
    "@types/chai-as-promised": "^8.0.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.19.5",
    "chai": "^5.3.3",
    "concurrently": "^9.2.1",
    "ethers": "^6.16.0",
    "forge-std": "github:foundry-rs/forge-std#v1.9.4",
    "hardhat": "^3.1.3",
    "mocha": "^11.7.5",
    "typescript": "~5.8.0"
  },
  "dependencies": {
    "@chainlink/contracts": "^1.5.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@openzeppelin/contracts-upgradeable": "^5.4.0"
  }
}
